{% extends 'layouts/base.html.twig' %}

{% block title %}Pins!{% endblock %}

{% block body %}
{% if pins|length > 0 %}
    <h1 class="mt-4 text-center text-muted">{{ pluraliz(pins| length,"Pin") }}</h1>
   {% for row in pins|batch(3) %}
        <div class="row mb-5">
                {% for pin in row %}
                    <div class="col-md-4">
                        <article class="pin bg-white rounded shadow">
                            <div class="mw-100 overflow-hidden">
                                <a href="{{ path('app_pins_show',{id: pin.id}) }}"> 
                                    <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('image/default.png')) | imagine_filter('squar_thumbnail_medium') }} " alt="{{ pin.title }}" class="w-100 rounded" />
                            </a>
                            </div>
                            <h2><a class="pl-3 pt-3 text-seco" href="{{ path('app_pins_show',{id:pin.id}) }}">{{ pin.title }} </a></h2>
                            <p class="pl-3 pb-3 text-muted">Submitted [OWNER FULL NAME]</p>
                        </article>
                    </div>
                {% endfor %}
        </div>
    {% endfor %}
{% else %}
    <h1>hello</h1>
    <p class="h1 mt-5 text-center">No pins yes. <a href="{{ path('app_pins_create') }}">Be the first!</a></p>
{% endif %}


{% endblock %}
