{% extends 'layouts/base.html.twig' %} {% block title %}Register!{% endblock %} 


{% block body %} 
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="mt-5 mb-5 text-center text-muted">Create an account</h1>

            {{ form_start(registrationForm) }} 
                <div class="row">
                    <div class="col-md-6"> 
                        {{ form_row(registrationForm.firstName) }} 
                    </div>
                    <div class="col-md-6"> 
                        {{ form_row(registrationForm.lastName) }} 
                    </div>
                </div>
                {{ form_row(registrationForm.email) }} 
                {{ form_row(registrationForm.plainPassword, 
                    { label: 'Password' }) }} 
                {{ form_row(registrationForm.agreeTerms)}}
                <button type="submit" class="btn btn-block btn-primary">Register</button> 
            {{ form_end(registrationForm) }} 
            <p class="mt-5 text-center text-muted">Already have an account?<a href="{{ path('app_login') }}">Login in
                    account</a></p>
        </div>
    </div>
{% endblock %}
 